{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && cmake --build .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "cd build && cmake -DCMAKE_BUILD_TYPE=Release .. && cmake --build .",
            "group": "build"
        }
    ]
}